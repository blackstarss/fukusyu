<body>
    <p id="notice"></p>

<h1>Books</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Body</th>
      <th colspan="3"></th>
    </tr>
  </thead>
<% @books.each do |book| %>
  <tbody>
      <tr>
        <td><%= book.title %></td>
        <td><%= book.body %></td>
        <td><%= link_to book_path(book.id) do %>Show<% end %></td>
        <td><%= link_to edit_book_path(book.id) do  %>Edit<% end %></td>
        <td><%= link_to book_path(book), method: :delete, data: { confirm: '削除しますか？'} do %>Destroy<% end %></td>
      </tr>
    </tbody>
<% end %>
</table>


<h2>New book</h2>
<%= form_with model:@book do |f| %>
  <div class="field">
  <%= f.label :title, "本のタイトル" %>
  <%= f.text_field :title %>
</div>

<div class="field">
　<%= f.label :body, "感想" %>
  <%= f.text_area :body %>
</div>

<%= f.submit 'Create Book' %>
<% end %>

</body>